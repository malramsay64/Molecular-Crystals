
# Determine system type
UNAME := $(shell uname)
HOST := $(shell hostname)

ifeq ($(HOST), gaucho.duckdns.org)
	SYS_NAME:=gaucho
else ifeq ($(HOST), ortho)
	SYS_NAME:=ubuntu
else ifeq ($(UNAME), Darwin)
    	SYS_NAME:=mac
else ifeq ($(HOST), meta)
	SYS_NAME:=ubuntu
else 
	SYS_NAME:=silica
endif
# vim:filetype=make
